
root = true


# every file
[*] 

charset = "utf-8"
end_of_file = lf
insert_final_charset = true
trim_trailing_whitespace = true


#
[*.{js,jsx,ts,tsx,vue}]
indent_size = 2
indent_style = space


#
[*.{css, styl ,scss , less , sass}]
indent_size = 2
indent_style = space


#
[*.html]
indent_size = 2
indent_style = space

#
[*.md]
trim_trailing_whitespace = true


#
[*.{json, yml}]
indent_size = 2
indent_style = space